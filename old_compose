version: '3'

volumes:
  db_data:
  storage:

services:
  app:
    image: snipe/snipe-it:${APP_VERSION:-v7.0.11}
    restart: unless-stopped
    volumes:
      - storage:/var/lib/snipeit
      - ./ssl:/var/lib/snipeit/ssl
    ports:
      - "${APP_PORT:-8000}:80"
      - "443:443"
    depends_on:
      db:
        condition: service_healthy
        restart: true
    environment:
      # SSL Configuration
      - SSL_CERT_PATH=/var/lib/snipeit/ssl/cert.pem
      - SSL_KEY_PATH=/var/lib/snipeit/ssl/privkey.pem
      - SSL_CHAIN_PATH=/var/lib/snipeit/ssl/chain.pem
    env_file:
      - .env

  db:
    image: mariadb:11.5.2
    restart: unless-stopped
    volumes:
      - db_data:/var/lib/mysql
    environment:
      MYSQL_DATABASE: ${DB_DATABASE}
      MYSQL_USER: ${DB_USERNAME}
      MYSQL_PASSWORD: ${DB_PASSWORD}
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
    healthcheck:
      test: ["CMD", "healthcheck.sh", "--connect", "--innodb_initialized"]
      interval: 5s
      timeout: 1s
      retries: 5
